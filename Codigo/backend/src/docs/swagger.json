  "paths": {
    "/favorites/search/{imdbID}": {
      "get": {
        "summary": "Busca um favorito pelo IMDb ID do filme",
        "tags": ["Favorites"],
        "parameters": [
          {
            "in": "path",
            "name": "imdbID",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "IMDb ID do filme"
          }
        ],
        "responses": {
          "200": {
            "description": "Favorito encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Favorite"
                }
              }
            }
          },
          "404": {
            "description": "Favorito não encontrado"
          }
        }
      }
    },
